- job:
    name: 'cccp-index'
    description: |
        Managed by Jenkins Job Builder, do not edit manually!
    node: master
    scm:
        - git:
            url: "{{ cccp_index_repo }}"
            skip-tag: True
    triggers:
        - pollscm: "H/10 * * * *" 
    builders:
        - shell: |
            git clone {{ cccp_source_repo }} container-pipeline-service
            cd container-pipeline-service/jenkinsbuilder
            git checkout {{ cccp_source_branch }}
            python cccp_index_reader.py ../../index.d

